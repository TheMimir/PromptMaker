{
  "version": "0.0.1",
  "mode": "personal",
  "projectName": "PromptMaker",
  "project": {
    "language": "python",
    "version": "3.8+",
    "framework": "streamlit",
    "locale": "ko"
  },
  "tools": {
    "test_framework": "pytest",
    "test_coverage": "pytest-cov",
    "linter": "ruff",
    "formatter": "black",
    "type_checker": "mypy"
  },
  "quality": {
    "coverage_target": 85,
    "max_file_loc": 300,
    "max_function_loc": 50,
    "max_parameters": 5,
    "max_complexity": 10
  },
  "features": [],
  "backup": {
    "enabled": true,
    "retentionDays": 30
  },
  "git": {
    "enabled": false,
    "autoCommit": true,
    "branchPrefix": "feature/"
  }
}
